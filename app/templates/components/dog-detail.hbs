<img class="picture {{if dog.dead 'dead'}}" src={{dog.picture}}/>
<div class="info">
  <span class={{if dog.dead 'dead'}}>
    <span>{{dog.name}}</span>
    <span>
      Gender: {{dog.gender}}, Lives: {{dog.lives}}, Dead: {{if dog.dead 'Yes' 'No'}}
    </span>
    <span>{{dog.description}}</span>
  </span>
  {{#if (gt dog.lives 0)}}
    {{#if dog.dead}}
      <button class="revive" {{action (action this.attrs.onRevive dog)}}>
        <img src="/images/revive-icon.jpg"/>
      </button>
    {{else}}
      <button class="trash" {{action (action this.attrs.onTrash dog)}}>
        <img src="/images/trash-icon.png"/>
      </button>
    {{/if}}
  {{/if}}
</div>